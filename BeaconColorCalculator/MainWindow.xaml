<Window x:Class="BeaconColorCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeaconColorCalculator"
        mc:Ignorable="d"
        Title="Beacon Color Calculator" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25">Input</Label>
        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25">Output</Label>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <Label>Input Type</Label>
            <RadioButton GroupName="InputType" IsChecked="True" x:Name="rb_rgb">RGB</RadioButton>
            <RadioButton GroupName="InputType"  x:Name="rb_hex">Hex</RadioButton>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Padding="0, 5, 10, 5" FontSize="14">RGB</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Width="50" HorizontalAlignment="Left" x:Name="txt_red">Red</TextBox>
            <TextBox Grid.Row="0" Grid.Column="2" Margin="5" Width="50" HorizontalAlignment="Left" x:Name="txt_green">Green</TextBox>
            <TextBox Grid.Row="0" Grid.Column="3" Margin="5" Width="50" HorizontalAlignment="Left" x:Name="txt_blue">Blue</TextBox>

            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Padding="0, 5, 10, 5" FontSize="14">Hex</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Width="100" HorizontalAlignment="Left" x:Name="txt_hex">HEX-Code</TextBox>

            <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="3" Margin="5" x:Name="btn_cont">Continue</Button>
        </Grid>

        <Label Grid.Row="1" Grid.Column="2" FontSize="30" x:Name="lbl_output">test</Label>
    </Grid>
</Window>
